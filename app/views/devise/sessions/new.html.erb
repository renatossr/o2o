<div class="form-signin w-100 m-auto text-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= image_tag "logo-one2one.png", class: "mt-5 mb-3", alt: "One 2 One", height: "150" %>
    <h1 class="h3 mb-3 fw-normal">Acessar</h1>
    <div class="form-floating">
      <%= f.input_field :email,
                required: false,
                autofocus: true,
                autocomplete: "email", 
                class:"form-control", 
                placeholder: "example@email.com"%>
      <label for="user_email">Email</label>
    </div>
    <div class="form-floating">
      <%= f.input_field :password,
                required: false, 
                class:"form-control", 
                placeholder: "Password"%>
      <label for="user_password">Senha</label>
    </div>
    <div class="d-flex checkbox mb-3 justify-content-center">
      <%= f.input :remember_me, label: "Lembrar de mim", as: :boolean if devise_mapping.rememberable? %>
    </div>
    <%= f.button :submit, "Entrar", class: "w-100 btn btn-lg btn-primary" %>
  <% end %>
</div>
