<h1><%= t("devise.invitations.new.header") %></h1>
<!-- Breadcrumb -->
<nav class="d-flex">
  <h6 class="ms-1 mb-0">
    <%= link_to "Home", root_path, class: "text-reset"%>
    <span>/</span>
    <%= link_to "UsuÃ¡rios", user_management_path, class: "text-reset"%>
    <span>/</span>
    <%= link_to t("devise.invitations.new.header"), "", class: "text-reset"%>
  </h6>
</nav>
<!-- Breadcrumb -->
<div class="container">
  <div class="form-signin w-100 m-auto">
    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-inputs">
          <%= f.input field %>
        </div>
      <% end -%>
      <div class="form-inputs">
        <%= f.label :first_name, "Primeiro Nome", style: "display: block", class:"form-label" %>
        <%= f.text_field :first_name , class: "form-control form-control-sm", placeholder: "Primeiro Nome..."%>
      </div>
      <div class="field">
        <%= f.label :last_name, "Sobrenome" %>
        <%= f.text_field :last_name %>
      </div>
      <div class="field">
        <%= f.label :role, "Tipo" %>
        <%= f.select :role, options_for_select(User.roles.map { |key, value| [key.humanize, key] }), {prompt: "Selecionar tipo"} %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, t("devise.invitations.new.submit_button"), data: { turbo: false } %>
      </div>
    <% end %>
  </div>
</div>
