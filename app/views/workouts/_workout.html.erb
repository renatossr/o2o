<div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="col-md-3">
      <div class="p-3 py-5">
        <h4 class="text-right mb-4">Data e Horário</h4>
        <div class="row mt-2">
          <div class="col-md-12">
            <%= l(workout.start_at.localtime, format: "%d/%m/%Y - %A") %>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md-12">
            Das <%= l(workout.start_at.localtime, format: "%H:%M") %> às <%= l(workout.end_at.localtime, format: "%H:%M") %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="p-3 py-5">
        <h4 class="text-right mb-4">Unidade</h4>
        <%= workout.location %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="p-3 py-5">
        <h4 class="mb-4">Coach</h4>
        <%= workout.coach.name %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="p-3 py-5">
        <h4 class="text-right mb-4">Alunos</h4>
        <ul class="list-group list-group-numbered list-group-flush">
          <% workout.members.each do |member| %>
            <li class="list-group-item ps-0"><%= member.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-3">
      <div class="p-3 py-5">
        <div class="row">
          <div class="col d-flex justify-content-end mb-2">
            <%= link_to raw("<i class=\"bi bi-pencil\"></i> Editar"), edit_workout_path(@workout), class: "btn btn-primary" %>
          </div>
        </div>
        <div class="row">
          <div class="col d-flex justify-content-end">
            <% if workout.has_not_loyal_billed_member %>
              <%= link_to raw("<i class=\"bi bi-currency-dollar\"></i> Faturar"), new_from_workout_invoices_path(workout_id: workout.id), class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
