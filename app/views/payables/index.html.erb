<h1>Pagamentos</h1>
<!-- Breadcrumb -->
<nav class="d-flex">
  <h6 class="ms-1 mb-0">
    <%= link_to "Home", root_path, class: "text-reset"%>
    <span>/</span>
    <%= link_to "Pagamentos", payables_path, class: "text-reset"%>
  </h6>
</nav>
<!-- Breadcrumb -->
<div class="container rounded bg-white mt-5 mb-5">
  <div class="p-3 py-5">
    <div class="d-flex p-0 mb-2 justify-content-between">
      <div class="p-2">
        <%= paginate @payables, window: 1, theme: 'bootstrap-5', pagination_class: "pagination-sm" %>
        <%= page_entries_info @payables %>
      </div>
      <div class="ml-auto p-2 align-self-end">
        <%= link_to raw("<i class=\"bi bi-clipboard2-plus\"></i> Novo Pagamento"), new_payable_path, class: "btn btn-primary" %>
      </div>
    </div>
    <%= search_form_for @q do |f| %>
      <div class="container d-flex bg-dark px-2 pt-2 mb-0 align-items-center justify-content-start">
        <%= f.text_field :coach_name_or_reference_date_or_status_or_total_value_cents_cont_any, placeholder: "Buscar...", class: "form-control form-control-sm mt-0 w-25" %>
        <%= f.submit "", style: "display:none;" %>
      </div>
    <% end %>
    <table class="table table-hover table-borderless" data-controller="masks" id="coaches">
      <thead class="table-dark">
        <tr>
          <th></th>
          <th>ID</th>
          <th><%= sort_link @q, :coach_name, "Coach", default_order: :asc, class: "link-light text-decoration-none" %></th>
          <th><%= sort_link @q, :reference_date, "Data", default_order: :desc, class: "link-light text-decoration-none" %></th>
          <th><%= sort_link @q, :status, "Status", default_order: :desc, class: "link-light text-decoration-none" %></th>
          <th><%= sort_link @q, :total_value_cents, "Valor Total", default_order: :asc, class: "link-light text-decoration-none" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @payables.each do |payable| %>
          <tr id="<%= dom_id payable %>" class="border-top">
            <td><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= dom_id payable %>_items" aria-expanded="false" aria-controls="<%= dom_id payable %>_items"><i class="bi bi-plus"></i></button></td>
            <td><%= payable.id %></td>
            <td><%= payable.coach.name %></td>
            <td><%= payable.reference_date %></td>
            <td><%= render(BadgeComponent.new(text: payable.status, color: payable.status_color)) %></td>
            <td><span>R$ </span><span data-masks-target="money"><%= payable.total_value_cents %></span></td>
            <td>
              <%= link_to raw("<i class=\"bi bi-pencil-square\"></i>"), edit_payable_path(payable), class: "btn btn-sm btn-outline-warning" if payable.status == "draft" %>
              <%= link_to raw("<i class=\"bi bi-eye-fill\"></i>"), payable_path(payable), class: "btn btn-sm btn-outline-warning" unless payable.status == "draft" %>
            </td>
          </tr>
          <tr>
            <td colspan="7" class="py-0">
              <div id="<%= dom_id payable %>_items" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#<%= dom_id payable %>">
                <div class="container py-3 px-3 pe-5">
                  <h5 class="font-size-15">Detalhes do Pagamento</h5>
                  <div class="table-responsive">
                    <table class="table table-nowrap table-centered mb-0">
                      <thead>
                        <tr>
                          <th style="width: 70px;">No.</th>
                          <th>Descrição</th>
                          <th class="text-end">Valor</th>
                          <th class="text-end">Quantidade</th>
                          <th colspan="2" class="text-end" style="width: 120px;">Valor Total</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% counter = 1 %>
                        <% payable.payable_items.each do |item| %>
                          <tr>
                            <th scope="row"><%= counter %></th>
                            <td>
                              <h6 class="mb-1"><%= item.description %></h6>
                            </td>
                            <td class="text-end"><%= number_to_currency((item.price_cents ||0)/100, unit: "R$", separator: ",", delimiter: ".") %></td>
                            <td class="text-end"><%= item.quantity %></td>
                            <td colspan="2" class="text-end"><%= number_to_currency((item.value_cents ||0)/100, unit: "R$", separator: ",", delimiter: ".") %></td>
                          </tr>
                          <% counter += 1%>
                        <% end %>
                        <tr>
                          <th scope="row" colspan="4" class="text-end">Sub Total</th>
                          <td class="text-end"><%= number_to_currency((payable.total_value_cents ||0)/100, unit: "R$", separator: ",", delimiter: ".") %></td>
                        </tr>
                        <tr>
                          <th scope="row" colspan="4" class="border-0 text-end">
                            Desconto</th>
                          <td class="border-0 text-end">- <%= number_to_currency((payable.discount_cents||0)/100, unit: "R$", separator: ",", delimiter: ".") %></td>
                        </tr>
                        <tr>
                          <th scope="row" colspan="4" class="border-0 text-end">Total</th>
                          <td class="border-0 text-end">
                            <h6 class="m-0"><%= number_to_currency((payable.final_value_cents||0)/100, unit: "R$", separator: ",", delimiter: ".") %></h6>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
