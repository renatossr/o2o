<p style="color: green"><%= notice %></p>

<div class="row align-items-md-stretch" data-controller="masks">
  <div class="col-md-5">
    <div class="p-5 mb-3 bg-light border rounded-3">
        <div class="dropdown float-end">
          <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false"></a>
          <div class="dropdown-menu dropdown-menu-end">
            <!-- item-->
            <%= link_to "Alterar Dados", edit_member_path(@member), class: "dropdown-item" %>
            <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item">Delete</a>
            <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item">Block</a>
          </div>
        </div>
        <div class="d-flex align-items-start">
          <div class="w-100">
              <h2 class="my-0"><%= @member.name%></h4>
          </div>
        </div>
        
        <div class="mt-3">
          <hr>
          <p class="text-muted mb-2 font-13"><strong>Apelido :</strong> <span class="ms-2"><%= @member.alias %></span></p>
          <p class="text-muted mb-2 font-13"><strong>Celular :</strong><span class="ms-2"><%= @member.cel_number %></span></p>
          <p class="text-muted mb-2 font-13"><strong>Status :</strong><span class="ms-2"><%= @member.active ? 'Ativo' : 'Cancelado' %></span></p>
          <p class="text-muted mb-2 font-13"><strong>Preço por aula :</strong><span class="ms-2">R$ </span><span data-masks-target="money"><%= @member.class_price %></span></p>
          <p class="text-muted mb-2 font-13"><strong>Mensalidade :</strong><span class="ms-2">R$ </span><span data-masks-target="money"><%= @member.subscription_price %></span></p>
        </div>
    </div>
    <div class="p-5 mb-3 bg-light border rounded-3">
      <div class="text-center">
        <div class="row">
          <div class="col-6">
            <h5 class="text-muted mt-1 mb-2 fw-normal">Aulas Mês</h5>
            <h2 class="mb-0 fw-bold"><%=@member.workouts.where(start_at: DateTime.current.beginning_of_month..DateTime.current.end_of_month).count %></h2>
          </div>
          <div class="col-6">
            <h5 class="text-muted mt-1 mb-2 fw-normal">Aulas Total</h5>
            <h2 class="mb-0 fw-bold"><%=@member.workouts.count %></h2>
          </div>
        </div>
        <hr>
        <ul class="list-group">
          <% @member.coaches.each do |coach|%>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= link_to coach.name, coach_path(coach) %></div>
            </div>
            <span class="badge bg-primary rounded-pill"><%=coach.workouts.where(start_at: DateTime.current.beginning_of_month..DateTime.current.end_of_month).count %></span>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  
  
  <div class="col-md-7">
    <div class="p-5 mb-3 bg-light border rounded-3">
      <div class="text-left">
        <h2 class="mb-0">Faturas</h2>
        <hr>
        <ul class="list-group">
          <% @member.invoices.order("reference_date desc").each do |invoice|%>
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= invoice.reference_date %></div> 
              <span>R$ </span><span data-masks-target="money"><%= invoice.total_value_cents %></span>
            </div>
            <span class="badge bg-primary rounded-pill"><%= invoice.status %></span>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>