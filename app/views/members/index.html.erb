<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<%end%>
<h1>Alunos</h1>
<div class="container rounded bg-white mt-5 mb-5">
  <div class="p-3 py-5">
    <div class="d-flex p-0 mb-2 justify-content-between">
      <div class="p-2">
        <%= paginate @members, window: 1, theme: 'bootstrap-5', pagination_class: "pagination-sm" %>
        <%= page_entries_info @members %>
      </div>
      <div class="ml-auto p-2 align-self-end">
        <%= link_to raw("<i class=\"bi bi-person-plus-fill\"></i> Novo Aluno"), new_member_path, class: "btn btn-primary" %>
      </div>
    </div>
    <table class="table table-striped mt-3" data-controller="masks" id="members">
      <thead class="table-dark">
        <tr>
          <th>Nome</th>
          <th>Apelido</th>
          <th>Celular</th>
          <th>Ativo</th>
          <th>Mensalidade</th>
          <th>Valor por aula</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr id="<%= dom_id member %>">
            <td><%= link_to member.name, edit_member_path(member)%></td>
            <td><%= member.alias %></td>
            <td data-masks-target="phone"><%= member.cel_number %></td>
            <td>
              <% if member.active? %>
                <i class="bi bi-check text-success fs-5 fw-bolder"></i>
              <% else %>
                <i class="bi bi-x text-danger fs-5 fw-bolder"></i>
              <% end %>
            </td>
            <td><span>R$ </span><span data-masks-target="money"><%= member.subscription_price %></span></td>
            <td><span>R$ </span><span data-masks-target="money"><%= member.class_price %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
