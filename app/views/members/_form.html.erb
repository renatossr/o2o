  </div>

  <div class="mb-3">
    <%= form.label :last_name, "Sobrenome", style: "display: block", class:"form-label" %>
    <%= form.text_field :last_name , class: "form-control", placeholder: "Sobrenome..."%>
  </div>

  <div class="mb-3">
    <%= form.label :alias, "Apelido", style: "display: block", class:"form-label" %>
    <%= form.text_field :alias , class: "form-control", placeholder: "Apelido..."%>
  </div>

  <div class="mb-3">
    <%= form.label :cel_number, "Celular", style: "display: block", class:"form-label" %>
    <%= form.telephone_field :cel_number , class: "form-control", data: { masks_target: 'phone' }, placeholder: "NÃºmero do celular..."%>
  </div>

  <div class="mb-3">
    <%= form.label :subscription_price, "Mensalidade", style: "display: block", class:"form-label" %>
    <%= form.text_field :subscription_price , class: "form-control", data: { masks_target: 'money' }, placeholder: "Valor da mensalidade (Pode ser zero)..."%>
  </div>

  <div class="mb-3">
    <%= form.label :class_price, "Valor por aula", style: "display: block", class:"form-label" %>
    <%= form.text_field :class_price , class: "form-control", data: { masks_target: 'money' }, placeholder: "Valor por aula (Pode ser zero)..."%>
  </div>

  <div class="form-check form-switch">
    <%= form.check_box :active , class: "form-check-input" %>
    <%= form.label :active, "Aluno Ativo", style: "display: block", class:"form-check-label" %>
  </div>
  

  <div>
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>  
<% end %>
