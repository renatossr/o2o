<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<%end%>

<h1>Coaches</h1>


<div class="container rounded bg-white mt-5 mb-5">
  <div class="p-3 py-5">
    <div class="d-flex p-0 mb-2 justify-content-between">
      <div class="p-2">
        <%= paginate @coaches, window: 1, theme: 'bootstrap-5', pagination_class: "pagination-sm" %>
        <%= page_entries_info @coaches %>
      </div>
      <div class="ml-auto p-2 align-self-end">
        <%= link_to raw("<i class=\"bi bi-person-plus-fill\"></i> Novo Coach"), new_coach_path, class: "btn btn-primary" %>
      </div>
    </div>


    <table class="table table-striped mt-3" data-controller="masks" id="members">
      <thead class="table-dark">
        <tr>
          <th>Nome</th>
          <th>Apelido</th>
          <th>Celular</th>
          <th>Sal√°rio Fixo</th>
          <th>Valor por Aula</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @coaches.each do |coach| %>
          <tr id="<%= dom_id coach %>">
            <td><%= coach.name %></td>
            <td><%= coach.alias %></td>
            <td data-masks-target="phone"><%= coach.cel_number %></td>
            <td><span>R$ </span><span data-masks-target="money"><%= coach.pay_fixed %></span></td>
            <td><span>R$ </span><span data-masks-target="money"><%= coach.pay_per_workout %></span></td>
            <td><%= link_to raw("<i class=\"bi bi-pencil-square\"></i>"), edit_coach_path(coach), class: "btn btn-sm btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
